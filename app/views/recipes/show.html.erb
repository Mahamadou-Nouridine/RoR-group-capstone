<div class="container-recipe">
    <div class="single-recipe">
        <h2>
            <%= @recipe.name %>
        </h2>
        <div class="details">
            <div class="preparation">
                <h6 class="prep">
                    Preparation time: <%= @recipe.preparation_time %> hours
                </h6>
            </div>
            <h6 class="prep">
                Cooking time: <%= @recipe.cooking_time %> hours
            </h6>
            <h6 class="prep">
                <%= @recipe.description%>
            </h6>
        </div>
        <%if can? :manage, @recipe%>
            <div class="buttons">
                <a href="#">Generate shopping list</a>
                <a href="#">Add ingredients</a>
            </div>
        <%end%>
    </div>

    <table class="table">
        <thead class="table-head">
            <tr>
                <th>
                    Food
                </th>
                <th>
                    Quantity
                </th>
                <th>
                    Price
                </th>
                <%if can? :manage, @recipe%>
                    <th>
                        Actions
                    </th>
                <%end%>
            </tr>
        </thead>
        <tbody>
            <%@foods.each_with_index do |item, index| %>
              <tr class="table-row">
                <td>
                    <%=item.food.name%>
                </td>
                <td>
                    <%=item.food.quantity%> <%=item.food.measurement_unit%>
                </td>
                <td>
                    $<%=item.food.price%>
                </td>
                <%if can? :manage, @recipe%>
                    <td>
                        <a href="#" class="btn modify">Modify</a>
                        <a href="#" class="btn">Remove</a>
                    </td>
                <%end%>
            </tr>
            <% end %>
        </tbody>
    </table>
</div>
