<div class="container">
    <div class="recipe-container">
        <% @recipes.each do |recipe|%>
            <a href="/recipes/<%= recipe.id %>" class="recipe-link">
                <div class="recipe_number_button">
                    <h2>
                        <%= recipe.name %>
                    </h2>
                </div>
                <div class="recipe_details">
                    <p>
                        <%= recipe.description %>
                    </p>
                </div>
            </a>
        <% end %>
    </div>
</div>